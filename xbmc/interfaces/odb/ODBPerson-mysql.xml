<changelog xmlns="http://www.codesynthesis.com/xmlns/odb/changelog" database="mysql" version="1">
  <model version="1">
    <table name="person" options="ENGINE=InnoDB" kind="object">
      <column name="idPerson" type="BIGINT UNSIGNED" null="false"/>
      <column name="name" type="TEXT" null="false"/>
      <column name="art" type="BIGINT UNSIGNED" null="true"/>
      <primary-key auto="true">
        <column name="idPerson"/>
      </primary-key>
      <foreign-key name="person_art_fk" deferrable="DEFERRED">
        <column name="art"/>
        <references table="art">
          <column name="idArt"/>
        </references>
      </foreign-key>
      <index name="name_i">
        <column name="name"/>
      </index>
    </table>
  </model>
</changelog>
